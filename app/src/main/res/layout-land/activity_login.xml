<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="2"
    tools:context=".activitys.LoginActivity"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/red_radial_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:padding="20dp"
            android:gravity="center"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:fontFamily="@font/calibri_regular"
                android:text="LOGIN"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/login_mobile_no"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/login_bg"
                android:hint="Username/Mobile Number"                android:inputType="phone"
                android:maxLength="30"
                android:padding="17dp"
                android:textColorHint="@color/hint_color" />

            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:background="@drawable/login_bg"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:maxLength="15"
                android:padding="17dp"
                android:paddingLeft="5dp"
                android:paddingTop="6dp"
                android:paddingRight="5dp"
                android:paddingBottom="6dp"
                android:textColorHint="@color/hint_color" />



            <!--            android:id="@+id/login_mobile_no"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="55dp"-->
            <!--            android:layout_marginLeft="15dp"-->
            <!--            android:layout_marginRight="15dp"-->
            <!--            android:layout_marginBottom="15dp"-->
            <!--            android:layout_marginTop="15dp"-->
            <!--            android:background="@drawable/login_bg"-->
            <!--            android:hint="Username/Mobile Number"-->
            <!--            android:textColorHint="@color/hint_color"-->
            <!--            android:maxLength="30" />-->

            <!--        <EditText-->
            <!--            android:id="@+id/login_password"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="55dp"-->
            <!--            android:layout_gravity="center"-->
            <!--            android:layout_marginLeft="15dp"-->
            <!--            android:layout_marginRight="15dp"-->
            <!--            android:textColorHint="@color/hint_color"-->
            <!--            android:layout_marginBottom="15dp"-->
            <!--            android:background="@drawable/login_bg"-->
            <!--            android:hint="@string/password"-->
            <!--            android:maxLength="15"-->
            <!--            android:inputType="textPassword"/>-->




            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/btn_login_bg"
                android:fontFamily="@font/calibri_regular"
                android:text="Login"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/calibri_regular"
                android:text="@string/forget_passwprd"
                android:textAlignment="center"
                android:id="@+id/forgot_password"
                android:textColor="@color/text_color"
                android:textSize="18dp" />


            <!--        <LinearLayout-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:orientation="horizontal"-->
            <!--            android:layout_height="wrap_content">-->
            <!--            <ImageView-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_weight="1.5"-->
            <!--                android:background="@drawable/left_circle_bg"-->
            <!--                android:layout_height="wrap_content"/>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/signup"
                    android:fontFamily="@font/calibri_regular"
                    android:text="@string/have_no_account"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:fontFamily="@font/calibri_regular"
                    android:text="@string/sign_up"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="22dp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#fff"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="270dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:background="@drawable/aarambh_logo"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="249dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/child_img"
            android:scaleType="fitXY" />
    </LinearLayout>

</LinearLayout>






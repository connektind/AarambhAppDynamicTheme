                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:text=""
                    android:textColor="@color/black"
                    android:id="@+id/test_question_red"
                    android:textSize="16dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content"/>
                <RadioGroup
